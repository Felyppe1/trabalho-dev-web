<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.trabalho.devweb.controllers.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>StatementController</servlet-name>
        <servlet-class>com.trabalho.devweb.controllers.StatementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatementController</servlet-name>
        <url-pattern>/extrato</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateUserController</servlet-name>
        <servlet-class>com.trabalho.devweb.controllers.CreateUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUserController</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
